<button type="button" class="btn btn-primary" {{action "openModal"}}  >{{fa-icon icon="upload"}} Upload</button>

<!-- Modal Dialog -->
<div class="modal fade" id="uploadFileModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4>Upload to Files View</h4>
            </div>
            <div class="modal-body">

                {{!--
                Try more options using below plugin link.
                https://www.npmjs.com/package/ember-cli-file-picker
                --}}

                {{#file-picker fileLoaded="fileLoaded"}}
                    <button type="button" class="btn btn-default">Choose File</button>
                {{/file-picker}}


            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default btn-success" {{action "uploadFile"}} >Upload</button>
                <button type="button" class="btn btn-default pull-right" {{action "closeModal"}} >Cancel</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Dialog Ends -->

{{yield}}

