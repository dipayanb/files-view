<button type="button" class="btn btn-primary" id="myBtn" {{action "openModal"}} >{{fa-icon icon="plus"}} New Directory</button>

<!-- Modal Dialog -->
<div class="modal fade" id="createDirectoryModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4>Create New Directory</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label for="directoryname">Directory Name</label>
                        <input type="text" class="form-control" id="directoryname" placeholder="Enter Directory Name">
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default btn-success" {{action "createDirectory"}} >Create Directory</button>
                <button type="button" class="btn btn-default pull-right" {{action "closeModal"}} >Cancel</button>
            </div>
        </div>
     </div>
</div>
<!-- Modal Dialog Ends -->

{{yield}}
