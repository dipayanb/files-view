{{#if modalGuard}}
  <div class="modal fade" tabindex=-1 role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title">File Preview</h3>
        </div>
        <pre class="modal-body preview-content" style="white-space:pre;margin: 10px; padding: 10px;overflow-y: auto; height: 350px">{{ filePreviewService.fileContent }}</pre>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" {{action 'close'}}>{{fa-icon icon="close"}} Cancel</button>
          <button type="submit" class="btn btn-primary" {{action 'download'}}>{{fa-icon icon="download"}} Download</button>
        </div>
      </div>
    </div>
  </div>
{{/if}}